            <p id="pp"> 全部作品如下</p>

            @foreach (var w in Model)
    {
        <!-- Post -->
        <article class="post">
            <header>
                <div class="title">
                    <h2><a href="#">@w.Title</a></h2>
                    <p>@w.CoreSentence</p>
                </div>
                <div class="meta">
                    <time class="published" datetime="2015-11-01">November 1, 2015</time>
                    <a href="#" class="author"><span class="name">@w.author</span><img src="../../Content/images/avatar.jpg" alt="" /></a>
                </div>
            </header>
            <div class="setimage">
                <a href="#" class="image featured"><img src=@w.Image alt="" /></a><br />
            </div>
            <br />
            <p class="overline1">@Html.Raw(@w.Context)</p>
            <footer>
                <ul class="actions">
                    <li>@Html.ActionLink("阅读更多", "ShowDetail", new { wid = w.Wid }, new { @class = "button big" })</li>
                    <li>@Html.ActionLink("删除作品", "DeleteArticle", new { wid = w.Wid }, new { @class = "button big" })</li>
                </ul>
                <ul class="stats">
                    <li><a href="#">General</a></li>
                    <li><a href="#" class="icon fa-heart">28</a></li>
                    <li><a href="#" class="icon fa-comment">128</a></li>
                </ul>
            </footer>
        </article>
