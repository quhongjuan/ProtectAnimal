        @section scripts{
            @Scripts.Render("~/bundles/jquery")
           
                <script>
                    var s="@Session["USER"]";
                         if(s=="")//未登录
                         {
                                alert("你还未登录，请先登录！");
                                window.location.href = "/Home/Login";
                         }
